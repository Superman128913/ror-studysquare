<h4><%= message.subject %></h4>
<% @resource.mail_form_attributes.each do |attribute, value|
  next if value.blank? %>

  <%= @resource.class.human_attribute_name(attribute) %>:
  <%= case value
    when /\n/
      raw(simple_format(h(value)))
    when Time, DateTime, Date
      I18n.l(value)
    else
      value
    end
  %>
  <br>
<% end %>