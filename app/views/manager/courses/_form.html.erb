<%= simple_form_for [:manager, @course], html: { class: 'form-horizontal' } do |f| %>
  <%= f.association :program_course, label_method: :description, collection: current_user.program_courses %>
  <%= f.association :tutor %>
  <%= f.association :course_type %>

  <%= f.input :group %>
  <%= f.input :capacity %>
  <%= f.input :price %>
  <%= f.input :cash %>
  <%= f.input :details, input_html: { rows: 4 } %>

  <hr>

  <%= f.input :active %>
  <%= f.input :visible %>
  <%= f.input :turbo %>


  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

