a:hover {
  text-decoration: none;
  color: #b8b8b8;
}

ul.main-list {
  display: block;
  width: 100%;
  margin: 0px 0px 0px 0px;
  border-radius: 3px;
  background: #272e3a;
  border: 1px solid #111419;
}

ul.main-list.no-bottom {
  border-bottom: 0px;
  border-radius: 3px 3px 0px 0px;
}

.main-list li {
  display: block;
  float: left;
  border-right: 1px solid #394252;
  list-style: none;
  width:24.7%;
}

.main-list li i {
  float: right;
  opacity: 0.5;
  margin-top: 3px;
}

.main-list li a {
  width: auto;
  padding: 10px 15px;
  display: block;
  font-weight: 400;
  cursor: default;
  color:#b8b8b8;
}


