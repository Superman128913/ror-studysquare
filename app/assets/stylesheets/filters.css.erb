.dropdown-list ul {
  display: block;
  float: left;
  border-right: 1px solid #394252;
  height: auto;
  margin: 0px;
  width:24.7%;
}

.dropdown-list ul li {
  list-style: none;
  width:100%;
}

.dropdown-list ul li a {
  padding: 8px 15px;
  width: auto;
  font-size: 12px;
  display: block;
  cursor: pointer;
  color: grey;
}

.dropdown-list ul li a:hover {
  color: #ededed;
  background: #394252;
  text-decoration:none;
}

.dropdown-list.expanded {
  display: block;
}

.dropdown-list a.active {
  color: #ededed;
  background: #394252;
}

